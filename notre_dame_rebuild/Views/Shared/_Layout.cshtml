<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/Reset.css")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

@* ----- HEADER -----*@

    <div id="header_container">

        <header id="header">

            <div id="logo">
                <img src="~/Content/images/logo.png" title="Notre Dame Logo" alt="Notre Dame Logo" />
            </div>

        </header>

    </div>

    <nav id="navigation">
        <ul>
            <li>
                <a href="#">About Notre Dame</a>
                <ul>
                    <li><a href="#">Mission, Vision, Values</a></li>
                </ul>
            </li>
            <li>
                <a href="#">Patients and Visitors</a>
                <ul>
                    <li><a href="#">Visiting Hours</a></li>
                </ul>
            </li>
            <li>
                <a href="#">Departments and Services</a>
                <ul>
                    <li><a href="#">Emergency Department</a></li>
                </ul>
            </li>
            <li>
                <a href="#">Join Our Team</a>
                <ul>
                    <li><a href="#">Job Opportunities</a></li>
                </ul>
            </li>
            <li>
                <a href="#">Contact</a>
                <ul>
                    <li><a href="#">Staff Directory</a></li>
                </ul>
            </li>
        </ul>
    </nav>

@* ----- BODY -----*@

    <section id="main">

        @RenderBody()

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)

    </section>

@* ----- FOOTER -----*@

    <footer id="footer">

    </footer>

</body>
</html>
